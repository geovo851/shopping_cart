<div class="container"> 
  <div class="col-sm-10 col-md-10">
    <div class="page-header">
      <h1 id="name_product"><%= @discounts_product.id %></h1>
    </div>
    <ul>
      <li>Product: <%= @discounts_product.product.name %></li>
      <li>Type of discounts: <%= @discounts_product.type_discount %></li>
      <li>Percentage or sum discount: <%= @discounts_product.value %></li>
      <li>Quantity of purchased products: <%= @discounts_product.quantity %></li>
      <li>Actual: <%= @discounts_product.actual ? 'Yes' : 'No' %></li>
    </ul>

    <h3><%= link_to 'Back', :back %></h3>

  </div>
</div>