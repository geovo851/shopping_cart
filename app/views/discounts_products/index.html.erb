<% provide(:title, 'Discounts on products') %>

<div class="container-fluid"> 
  <div class="row">
    <div class="col-sm-10 col-md-10">

      <div class="page-header">
        <h1>Discounts on products</h1>
      </div>
      <p>
        <%= button_to new_discounts_product_path, method: :get, class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          Add discount on product
        <% end %>
      </p>

      <% if @discounts_products.empty? %>
        <b>No discounts on products</b>
      <% else %>

      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr class="warning">
              <th>Id</th>
              <th>Product</th>
              <th>Quantity of purchased products</th>
              <th>Percentage or sum discount</th>
              <th>Type of discounts</th>
              <th>Actual</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody id="discounts-products">
            <%= render partial: "discounts_product", :collection => @discounts_products, as: :discounts_product %>
          </tbody>
        </table>
      </div>
      <div id="paginator", class="paginate-centre">
        <%= paginate @discounts_products, :remote => true %>
      </div>
      <% end %>

      <p>
        <%= button_to 'Back', admin_path, method: :get, class: "btn btn-default" %>
      </p>
    </div>
  </div>
</div>
