<%= form_for @discounts_category do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <div class="col-sm-12 col-md-12">
      <%= f.label :category, class: "control-label" %>
    </div>
    <div class="col-sm-6 col-md-6">
      <%= f.collection_select(:category_id, categories, 
          :id, :title, {prompt: 'Please select category'}, class: "col-sm-6 col-md-6") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 col-md-12">
      <%= f.label :type_discount, "Type of discounts", class: "control-label" %>
    </div>
    <div class="col-sm-6 col-md-6">
      <%= f.select(:type_discount, DiscountsCategory.types, {prompt: 'Please select the type of discounts'}, class: "col-sm-6 col-md-6") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 col-md-12">
      <%= f.label :value, "Percentage or sum discount", class: "control-label" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :value, size: 22, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 col-md-12">
      <%= f.label :quantity, 'Quantity of purchased products', class: "control-label" %>
    </div>
    <div class="col-sm-2">
      <%= f.text_field :quantity, size: 22, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 col-md-12">
      <%= f.label :actual, class: "control-label" %>
      <%= f.check_box :actual %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-12 col-md-12">
      <%= f.submit title_sumbit, class: "btn btn-primary btn-sm" %>
    </div>
  </div>

<% end %>

<div class="col-sm-12 col-md-12"><%= button_to 'Back', discounts_categories_path, method: :get, class: "btn btn-default" %></div>
